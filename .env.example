# ==============================================
# Common Configuration
# ==============================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ==============================================
# Database Configuration
# ==============================================
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=whatsapp_chat

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# JWT Configuration
# ==============================================
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# ==============================================
# CORS Configuration
# ==============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# AWS S3 and CloudFront Configuration
# ==============================================
S3_MEDIA_BUCKET=whatsapp-chat-media
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDFRONT_MEDIA_DIST_ID=
MEDIA_BASE_URL=https://media.example.com

# ==============================================
# Web Push Notifications (VAPID)
# ==============================================
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# ==============================================
# Service URLs (Internal)
# ==============================================
AUTH_SERVICE_URL=http://localhost:3001
USERS_SERVICE_URL=http://localhost:3002
CHATS_SERVICE_URL=http://localhost:3003
MESSAGES_SERVICE_URL=http://localhost:3004
MEDIA_SERVICE_URL=http://localhost:3005
NOTIFICATIONS_SERVICE_URL=http://localhost:3006

# ==============================================
# Gateway Configuration
# ==============================================
GATEWAY_PORT=3000

# ==============================================
# Frontend Configuration (Vite)
# ==============================================
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000
VITE_CLOUDFRONT_MEDIA_URL=https://media.example.com
